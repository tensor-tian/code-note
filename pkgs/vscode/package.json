{
  "name": "vscode",
  "displayName": "code note",
  "description": "mark code with code-hike",
  "version": "0.0.1",
  "publisher": "tensor-tian",
  "repository": {
    "type": "git",
    "url": "https://github.com/tensor-tian/code-note.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.activate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "files.associations": {
      ".cnote": "vscode-note"
    },
    "customEditors": [
      {
        "viewType": "vscode-note",
        "displayName": "Code Note",
        "selector": [
          {
            "filenamePattern": "*.cnote"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-note.open-file",
        "title": "Code Note: Open File"
      },
      {
        "command": "vscode-note.create-file",
        "title": "Code Note: Create File"
      },
      {
        "command": "vscode-note.remove-all",
        "title": "Code Note: Remove All"
      },
      {
        "command": "vscode-note.add-highlight",
        "title": "Code Note: Add Highlight"
      },
      {
        "command": "vscode-note.remove-highlight",
        "title": "Code Note: Remove Highlight"
      },
      {
        "command": "vscode-note.add-node-left",
        "title": "Code Note: Add Left Node"
      },
      {
        "command": "vscode-note.add-node-up",
        "title": "Code Note: Add Up Node"
      },
      {
        "command": "vscode-note.add-node-right",
        "title": "Code Note: Add Right Node"
      },
      {
        "command": "vscode-note.add-node-down",
        "title": "Code Note: Add Down Node"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-note.add-highlight",
          "group": "code-note@1"
        },
        {
          "command": "vscode-note.remove-highlight",
          "group": "code-note@2"
        },
        {
          "command": "vscode-note.add-node-left",
          "group": "code-note@3"
        },
        {
          "command": "vscode-note.add-node-up",
          "group": "code-note@4"
        },
        {
          "command": "vscode-note.add-node-right",
          "group": "code-note@5"
        },
        {
          "command": "vscode-note.add-node-down",
          "group": "code-note@6"
        },
        {
          "command": "vscode-note.remove-all",
          "group": "code-note@7"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-note.add-highlight",
        "key": "ctrl+h h",
        "mac": "cmd+h h",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-note.remove-highlight",
        "key": "ctrl+k r",
        "mac": "cmd+h r",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-note.add-next",
        "key": "ctrl+h n",
        "mac": "cmd+h n"
      },
      {
        "command": "vscode-note.add-detail",
        "key": "ctrl+h d",
        "mac": "cmd+h d"
      },
      {
        "command": "vscode-note.remove-all",
        "key": "ctrl+h x",
        "mac": "cmd+h x"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippet/lang.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "build": "yarn run compile",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/nanoid": "^3.0.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "nanoid": "^5.0.7",
    "toml": "^3.0.0"
  }
}
