{
  "name": "vscode",
  "displayName": "vscode",
  "description": "mark code with code-hike",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.activate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "files.associations": {
      ".cnote": "vscode-note"
    },
    "customEditors": [
      {
        "viewType": "vscode-note",
        "displayName": "Code Note",
        "selector": [
          {
            "filenamePattern": "*.cnote"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-note.open-file",
        "title": "Code Note: Open File"
      },
      {
        "command": "vscode-note.create-file",
        "title": "Code Note: Create File"
      },
      {
        "command": "vscode-note.remove-all",
        "title": "Code Note: Remove All"
      },
      {
        "command": "vscode-note.add-highlight",
        "title": "Code Note: Add Highlight"
      },
      {
        "command": "vscode-note.remove-highlight",
        "title": "Code Note: Remove Highlight"
      },
      {
        "command": "vscode-note.add-detail",
        "title": "Code Note: Add Detail Note"
      },
      {
        "command": "vscode-note.add-next",
        "title": "Code Note: Add Next Note"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-note.add-highlight",
          "group": "code-note@1"
        },
        {
          "command": "vscode-note.remove-highlight",
          "group": "code-note@2"
        },
        {
          "command": "vscode-note.add-detail",
          "group": "code-note@3"
        },
        {
          "command": "vscode-note.add-next",
          "group": "code-note@4"
        },
        {
          "command": "vscode-note.remove-all",
          "group": "code-note@5"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-note.add-highlight",
        "key": "ctrl+h ctrl+h",
        "mac": "cmd+h cmd+h",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-note.remove-highlight",
        "key": "ctrl+h ctrl+r",
        "mac": "cmd+h cmd+r",
        "when": "editorTextFocus"
      },
      {
        "command": "vscode-note.add-next",
        "key": "ctrl+h ctrl+n",
        "mac": "cmd+h cmd+n"
      },
      {
        "command": "vscode-note.add-detail",
        "key": "ctrl+h ctrl+n",
        "mac": "cmd+h cmd+n"
      },
      {
        "command": "vscode-note.remove-all",
        "key": "ctrl+h ctrl+c",
        "mac": "cmd+h cmd+c"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "build": "yarn run compile",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/nanoid": "^3.0.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "nanoid": "^5.0.7",
    "toml": "^3.0.0"
  }
}
